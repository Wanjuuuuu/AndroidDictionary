<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="term"
            type="com.wanjuuuuu.androiddictionary.data.Term" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/outer_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/term_detail_padding">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_header_height"
                android:background="@drawable/rounded_rectangle">

                <TextView
                    android:id="@+id/term_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/detail_header_marginTop"
                    android:ellipsize="end"
                    android:maxLines="@integer/detail_title_maxLines"
                    android:text="@{term.name}"
                    android:textColor="@color/content_textColor"
                    android:textSize="@dimen/detail_title_textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/dummy_text" />

                <TextView
                    android:id="@+id/term_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/detail_date_marginTop"
                    android:layout_marginEnd="@dimen/detail_date_marginEnd"
                    android:text="@{term.modifyTimeString}"
                    android:textColor="@color/date_textColor"
                    android:textSize="@dimen/detail_date_textSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/term_title"
                    tools:text="@string/dummy_text" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detail_content_marginTop"
                android:background="@drawable/rounded_rectangle"
                android:paddingStart="@dimen/detail_content_paddingStart"
                android:paddingEnd="@dimen/detail_content_paddingEnd">

                <TextView
                    android:id="@+id/term_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{term.description}"
                    android:textColor="@color/content_textColor"
                    android:textSize="@dimen/detail_content_textSize"
                    tools:text="@string/dummy_text" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</layout>